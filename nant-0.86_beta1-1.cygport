inherit mono

DESCRIPTION="NAnt build tool"
HOMEPAGE="http://nant.sourceforge.net/"
SRC_URI="http://go-mono.com/sources/${PN}/${P/_/-}-src.tar.gz"
SRC_DIR=${P/_/-}

MAKEOPTS+=" -j1 DIRSEP=/ PLATFORM_REFERENCES="

src_compile() {
	lndirs
	cd ${B}
	cygmake prefix=/usr
}

src_install() {
	cd ${B}
	cyginstall prefix=${D}/usr

	sed -i -e "s!${D}!!g" ${D}/usr/bin/nant
}
